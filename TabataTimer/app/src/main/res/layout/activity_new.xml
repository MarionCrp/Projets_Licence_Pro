<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marion.tabatatimer.Program.New">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/exerciceName"
            android:layout_weight="0.07"
            android:hint="Program Title"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="83dp">


            <TextView
                android:text="Exercice Time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tabataLabel"
                android:layout_weight="0.40"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:gravity="center" />

            <NumberPicker
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:id="@+id/active_time_minutes" />

            <NumberPicker
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:id="@+id/active_time_secondes" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_weight="0.25">

            <TextView
                android:text="Rest Time"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:gravity="center"
                android:layout_weight="0.08" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passive_time_minutes"
                android:layout_weight="1.46" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passive_time_secondes"
                android:layout_weight="1.07" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="362dp"
            android:layout_height="59dp">

            <TextView
                android:text="Cycles"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title" />

            <NumberPicker
                android:layout_width="213dp"
                android:layout_height="51dp"
                android:id="@+id/nb_of_cycles" />
        </LinearLayout>

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeSubmit"
            android:onClick="onTimeSubmit"
            android:layout_weight="0.07" />

        <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:onClick="onCancel"
            android:layout_weight="0.07" />

    </LinearLayout>

</RelativeLayout>
